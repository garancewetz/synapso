generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExerciceCategory {
  UPPER_BODY // Haut du corps
  LOWER_BODY // Bas du corps
  STRETCHING // Étirement
  CORE // Tronc
}

enum ResetFrequency {
  DAILY  // Tous les jours à minuit
  WEEKLY // Une fois par semaine, le dimanche à minuit
}

model User {
  id             Int             @id @default(autoincrement())
  name           String          @unique
  resetFrequency ResetFrequency  @default(DAILY)
  exercices      Exercice[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model Exercice {
  id                 Int                @id @default(autoincrement())
  name               String
  descriptionText    String
  descriptionComment String?
  workoutRepeat      String?
  workoutSeries      String?
  workoutDuration    String?
  equipments         String // Stocké en JSON string
  category           ExerciceCategory   @default(UPPER_BODY)
  userId             Int
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  bodyparts          ExerciceBodypart[]
  history            History[]
  completed          Boolean            @default(false)
  completedAt        DateTime?
  pinned             Boolean            @default(false)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt

  @@index([userId])
  @@index([category])
  @@index([completed])
  @@index([pinned])
}

model Bodypart {
  id        Int                @id @default(autoincrement())
  name      String             @unique
  exercices ExerciceBodypart[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model ExerciceBodypart {
  exerciceId Int
  bodypartId Int
  exercice   Exercice @relation(fields: [exerciceId], references: [id], onDelete: Cascade)
  bodypart   Bodypart @relation(fields: [bodypartId], references: [id], onDelete: Cascade)

  @@id([exerciceId, bodypartId])
}

model History {
  id          Int      @id @default(autoincrement())
  exerciceId  Int
  exercice    Exercice @relation(fields: [exerciceId], references: [id], onDelete: Cascade)
  completedAt DateTime @default(now())
  createdAt   DateTime @default(now())

  @@index([exerciceId])
  @@index([completedAt])
}

model AphasieItem {
  id        Int      @id @default(autoincrement())
  quote     String
  meaning   String
  date      String?
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
