generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int                @id @default(autoincrement())
  name           String             @unique
  passwordHash   String
  role           UserRole           @default(USER)
  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt
  resetFrequency ResetFrequency     @default(DAILY)
  dominantHand   DominantHand       @default(RIGHT)
  isAphasic      Boolean            @default(false)
  exercices      Exercice[]
  progress       Progress[]
  aphasieItems   AphasieItem[]
  aphasieChallenges AphasieChallenge[]

  @@index([role])
}

model Exercice {
  id                 Int                @id @default(autoincrement())
  name               String
  descriptionText    String
  descriptionComment String?
  workoutRepeat      String?
  workoutSeries      String?
  workoutDuration    String?
  equipments         String
  completed          Boolean            @default(false)
  completedAt        DateTime?
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
  userId             Int
  pinned             Boolean            @default(false)
  category           ExerciceCategory   @default(UPPER_BODY)
  mastered           Boolean            @default(false)
  masteredAt         DateTime?
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  bodyparts          ExerciceBodypart[]
  history            History[]

  @@index([userId])
  @@index([category])
  @@index([completed])
  @@index([pinned])
  @@index([mastered])
}

model Bodypart {
  id        Int                @id @default(autoincrement())
  name      String             @unique
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
  exercices ExerciceBodypart[]
}

model ExerciceBodypart {
  exerciceId Int
  bodypartId Int
  bodypart   Bodypart @relation(fields: [bodypartId], references: [id], onDelete: Cascade)
  exercice   Exercice @relation(fields: [exerciceId], references: [id], onDelete: Cascade)

  @@id([exerciceId, bodypartId])
}

model History {
  id          Int      @id @default(autoincrement())
  exerciceId  Int
  completedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  exercice    Exercice @relation(fields: [exerciceId], references: [id], onDelete: Cascade)

  @@index([exerciceId])
  @@index([completedAt])
}

model AphasieItem {
  id        Int       @id @default(autoincrement())
  quote     String
  meaning   String
  date      DateTime?
  comment   String?
  userId    Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([date])
}

model AphasieChallenge {
  id        Int      @id @default(autoincrement())
  text      String
  mastered  Boolean  @default(false)
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([mastered])
  @@index([userId])
}

model Progress {
  id        Int      @id @default(autoincrement())
  content   String
  emoji     String?
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("Victory")
}

enum ExerciceCategory {
  UPPER_BODY
  LOWER_BODY
  STRETCHING
  CORE
}

enum ResetFrequency {
  DAILY
  WEEKLY
}

enum DominantHand {
  LEFT
  RIGHT
}

enum UserRole {
  USER
  ADMIN
}
