// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ExerciceCategory {
  UPPER_BODY // Haut du corps
  LOWER_BODY // Bas du corps
  STRETCHING // Étirement
}

model User {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  exercices Exercice[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Exercice {
  id                 Int                @id @default(autoincrement())
  name               String
  descriptionText    String
  descriptionComment String?
  workoutRepeat      Int?
  workoutSeries      Int?
  workoutDuration    String?
  equipments         String // Stocké en JSON string
  category           ExerciceCategory   @default(UPPER_BODY)
  userId             Int
  user               User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  bodyparts          ExerciceBodypart[] // Gardé pour compatibilité, sera supprimé après migration
  history            History[]
  completed          Boolean            @default(false)
  completedAt        DateTime?
  pinned             Boolean            @default(false)
  createdAt          DateTime           @default(now())
  updatedAt          DateTime           @updatedAt
}

model Bodypart {
  id        Int                @id @default(autoincrement())
  name      String             @unique
  color     String
  exercices ExerciceBodypart[]
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt
}

model ExerciceBodypart {
  exerciceId Int
  bodypartId Int
  exercice   Exercice @relation(fields: [exerciceId], references: [id], onDelete: Cascade)
  bodypart   Bodypart @relation(fields: [bodypartId], references: [id], onDelete: Cascade)

  @@id([exerciceId, bodypartId])
}

model History {
  id          Int      @id @default(autoincrement())
  exerciceId  Int
  exercice    Exercice @relation(fields: [exerciceId], references: [id], onDelete: Cascade)
  completedAt DateTime @default(now())
  createdAt   DateTime @default(now())
}

model AphasieItem {
  id        Int      @id @default(autoincrement())
  quote     String
  meaning   String
  date      String?
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
