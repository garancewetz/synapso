# Base de données
# Pour le développement local avec SQLite (optionnel, vous pouvez utiliser PostgreSQL)
# DATABASE_URL="file:./prisma/dev.db"

# Pour PostgreSQL (recommandé pour la production)
# Format: postgresql://user:password@host:port/database?schema=public
# Exemple Supabase: postgresql://postgres:[password]@[host]:5432/postgres
# Exemple Neon: postgresql://[user]:[password]@[host]/[database]?sslmode=require
DATABASE_URL="postgresql://user:password@localhost:5432/synapso?schema=public"

# Secret pour signer les cookies d'authentification
# ⚠️ OBLIGATOIRE EN PRODUCTION - utiliser une chaîne aléatoire longue (min 32 caractères)
# Générer avec: openssl rand -hex 32
COOKIE_SECRET="votre_secret_pour_les_cookies_a_changer_en_production"

# Nom de l'utilisateur admin (optionnel)
# Seul l'utilisateur avec ce nom exact aura le rôle ADMIN lors de l'inscription
# Si non défini, aucun utilisateur ne sera admin via l'inscription
ADMIN_NAME=""

# Code(s) d'invitation requis pour créer un compte
# ⚠️ OBLIGATOIRE EN PRODUCTION - utiliser une chaîne aléatoire longue (min 16 caractères)
# Générer avec: openssl rand -hex 16
# Vous pouvez définir plusieurs codes séparés par des virgules (ex: "coucou2025,avcsalut")
# En développement, si non défini et NEXT_PUBLIC_ENVIRONMENT="dev", le code n'est pas requis
INVITATION_CODE=""

# Environnement (dev pour développement, production pour production)
# La bannière de développement s'affichera uniquement si NEXT_PUBLIC_ENVIRONMENT="dev"
NEXT_PUBLIC_ENVIRONMENT="dev"

# URL de base du site (pour les métadonnées Open Graph et Twitter)
# Exemple en production: https://votre-site.netlify.app
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
